<?xml version="1.0"?>
<registry>

    <record interface="Products.ResourceRegistries.interfaces.settings.IResourceRegistriesSettings"
            field="resourceBundlesForThemes">
        <value purge="false">
            <element key="toolbar">
                <element>jquery</element>
                <element>jquerytools</element>
                <element>tinymce</element>
                <element>toolbar</element>
                <element>deco</element>
            </element>
        </value>
    </record>

    <!-- Omitted fields -->
    <record name="plone.app.deco.default_omitted_fields">
        <field type="plone.registry.field.List">
            <title>Default omitted fields</title>
            <value_type type="plone.registry.field.TextLine" />
        </field>
        <value>
            <element>plone.app.dexterity.behaviors.metadata.IDublinCore.subjects</element>
            <element>plone.app.dexterity.behaviors.metadata.IDublinCore.language</element>
            <element>plone.app.dexterity.behaviors.metadata.IDublinCore.effective</element>
            <element>plone.app.dexterity.behaviors.metadata.IDublinCore.expires</element>
            <element>plone.app.dexterity.behaviors.metadata.IDublinCore.creators</element>
            <element>plone.app.dexterity.behaviors.metadata.IDublinCore.contributors</element>
            <element>plone.app.dexterity.behaviors.metadata.IDublinCore.rights</element>
            <element>plone.app.dexterity.behaviors.metadata.ICategorization.subjects</element>
            <element>plone.app.dexterity.behaviors.metadata.ICategorization.language</element>
            <element>plone.app.dexterity.behaviors.metadata.IPublication.effective</element>
            <element>plone.app.dexterity.behaviors.metadata.IPublication.expires</element>
            <element>plone.app.dexterity.behaviors.metadata.IOwnership.creators</element>
            <element>plone.app.dexterity.behaviors.metadata.IOwnership.contributors</element>
            <element>plone.app.dexterity.behaviors.metadata.IOwnership.rights</element>

            <!-- SHOULD BE REMOVED WHEN WE GET RID OF THE METADATA APP TILES -->
            <element>plone.app.dexterity.behaviors.metadata.IDublinCore.title</element>
            <element>plone.app.dexterity.behaviors.metadata.IDublinCore.description</element>
        </value>
    </record>

    <!-- Tile categories -->
    <record name="plone.app.deco.tile_categories">
        <field type="plone.registry.field.List">
            <title>Tile Categories</title>
            <value_type type="plone.registry.field.TextLine" />
        </field>
        <value>
            <element>structure</element>
            <element>media</element>
            <element>fields</element>
            <element>applications</element>
            <element>properties</element>
            <element>advanced</element>
        </value>
    </record>

    <!-- Tiles -->
    <records prefix="plone.app.deco.structure_tiles.text"
            interface="plone.app.deco.interfaces.ITile">
        <value key="default_value">&lt;p&gt;New block&lt;/p&gt;</value>
        <value key="category">structure</value>
        <value key="read_only">False</value>
        <value key="name">text</value>
        <value key="settings">False</value>
        <value key="favorite">False</value>
        <value key="label">Text</value>
        <value key="tile_type">text</value>
        <value key="rich_text">True</value>
        <value key="weight">10</value>
    </records>
    <record name="plone.app.deco.structure_tiles.text.available_actions">
        <field type="plone.registry.field.List">
            <title>Available actions for the Text structure tile</title>
            <value_type type="plone.registry.field.TextLine" />
        </field>
        <value>
            <element>html</element>
            <element>strong</element>
            <element>em</element>
            <element>paragraph</element>
            <element>heading</element>
            <element>subheading</element>
            <element>discreet</element>
            <element>literal</element>
            <element>quote</element>
            <element>callout</element>
            <element>highlight</element>
            <element>sub</element>
            <element>sup</element>
            <element>remove-format</element>
            <element>pagebreak</element>
            <element>ul</element>
            <element>ol</element>
            <element>justify-left</element>
            <element>justify-center</element>
            <element>justify-right</element>
            <element>justify-justify</element>
            <element>tile-align-block</element>
            <element>tile-align-left</element>
            <element>tile-align-right</element>
        </value>
    </record>

   <records prefix="plone.app.deco.app_tiles.plone_app_deco_title"
            interface="plone.app.deco.interfaces.ITile">
        <value key="name">plone.app.deco.title</value>
        <value key="label">Title</value>
        <value key="category">fields</value>
        <value key="tile_type">app</value>
        <value key="default_value"></value>
        <value key="read_only">false</value>
        <value key="settings">false</value>
        <value key="favorite">false</value>
        <value key="rich_text">true</value>
        <value key="weight">10</value>
    </records>
    <record name="plone.app.deco.app_tiles.plone_app_deco_title.available_actions">
        <field type="plone.registry.field.List">
            <title>Available actions for the Title tile</title>
            <value_type type="plone.registry.field.TextLine" />
        </field>
        <value>
             <element>tile-align-block</element>
             <element>tile-align-right</element>
             <element>tile-align-left</element>
        </value>
    </record>  

   <records prefix="plone.app.deco.app_tiles.plone_app_deco_description"
            interface="plone.app.deco.interfaces.ITile">
        <value key="name">plone.app.deco.description</value>
        <value key="label">Description</value>
        <value key="category">fields</value>
        <value key="tile_type">app</value>
        <value key="default_value"></value>
        <value key="read_only">false</value>
        <value key="settings">false</value>
        <value key="favorite">false</value>
        <value key="rich_text">true</value>
        <value key="weight">20</value>
    </records>
    <record name="plone.app.deco.app_tiles.plone_app_deco_description.available_actions">
        <field type="plone.registry.field.List">
            <title>Available actions for the Description tile</title>
            <value_type type="plone.registry.field.TextLine" />
        </field>
        <value>
             <element>tile-align-block</element>
             <element>tile-align-right</element>
             <element>tile-align-left</element>
        </value>
    </record>

</registry>
